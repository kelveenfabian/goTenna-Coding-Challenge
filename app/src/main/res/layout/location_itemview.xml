<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dim_8dp"
    app:cardCornerRadius="@dimen/dim_3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_30sp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            tools:text="Cadman Plaza Park"
            tools:textSize="@dimen/dim_30sp"
            tools:textStyle="bold"
            tools:textColor="@color/color_black"/>
        <TextView
            android:id="@+id/location_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="italic|bold"
            tools:text="A nice park with an astro turf field in the area"
            tools:textSize="16sp"
            tools:textStyle="bold"/>
    </LinearLayout>

</android.support.v7.widget.CardView>